<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

    <ImageView
            android:id="@+id/track_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/layout"
            android:background="@color/white"
            android:paddingBottom="20dp"
            android:layout_marginBottom="30dp" />


    <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@+id/track_layout"
            android:layout_toEndOf="@+id/flag" />

    <ImageView
            android:id="@+id/flag"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/track_layout"
            android:contentDescription="@string/flag" />


    <TextView
            style="@style/GeneralTextStyle"
            android:id="@+id/sessions"
            android:layout_below="@+id/name"
            android:layout_marginTop="20dp" />

    <TextView
            style="@style/GeneralTextStyle"
            android:textStyle="bold"
            android:id="@+id/podium"
            android:layout_below="@+id/sessions" />

    <TextView
            android:id="@+id/open_website"
            style="@style/LinkToBrowserText"
            android:layout_below="@+id/podium"
            android:text="@string/openWebsite" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/share"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:id="@+id/share_button"
            android:src="@drawable/ic_share_fill0_wght400_grad0_opsz48" />
</RelativeLayout>